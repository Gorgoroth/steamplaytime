/*---- CROSS BROWSER DROPDOWN MENU snagged from http://www.handy-html.com/simple-css-dropdown-menu-updated/----*/
ul#nav {margin: 5px;}
ul.drop a { display:block; color: white; font-family: Verdana; font-size: 15px; text-decoration: none;}
ul.drop, ul.drop li, ul.drop ul { list-style: none; margin: 0; font-size: 15px; padding: 0; border: 1px solid #fff; background: #4C92D5; color: white;}
ul.drop { position: relative; z-index: 597; float: left; }
ul.drop li { float: left; line-height: 1.3em; vertical-align: middle; zoom: 1; padding: 5px 10px; }
ul.drop li.hover, ul.drop li:hover { position: relative; z-index: 599; cursor: default; background: #3987D2; }
ul.drop ul { visibility: hidden; position: absolute; top: 100%; left: 0; z-index: 598; width: 195px; background: #555; border: 1px solid #fff; }
ul.drop ul li { float: none; }
ul.drop ul ul { top: -2px; left: 100%; }
ul.drop li:hover > ul { visibility: visible }



